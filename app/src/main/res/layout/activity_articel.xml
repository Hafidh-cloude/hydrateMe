                android:id="@+id/buttonA4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baca disini"
                android:background="#0D000000"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

